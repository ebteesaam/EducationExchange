<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:text="Please Select a Faculty:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/comput"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/white_rounded_buttom"
            android:text="@string/faculty_of_computing_and_information_technology"
            android:textAllCaps="false" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/general_course"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@id/relativeLayout"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/white_rounded_buttom"
        android:text="@string/general_course"
        android:textAllCaps="false" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/medicine"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@+id/general_course"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/white_rounded_buttom"
        android:text="@string/faculty_of_medicine_in_rabigh"
        android:textAllCaps="false" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/business"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@+id/medicine"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/white_rounded_buttom"
        android:text="@string/college_of_business_cob"
        android:textAllCaps="false" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/scin"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@+id/business"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/white_rounded_buttom"
        android:text="@string/college_of_sciences"
        android:textAllCaps="false" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/english"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@+id/scin"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/white_rounded_buttom"
        android:text="@string/college_of_english"
        android:textAllCaps="false" />


</RelativeLayout>