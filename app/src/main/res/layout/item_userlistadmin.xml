<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageM"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_profile"
        app:civ_border_color="@color/gray"
        app:civ_border_width="1dp"/>

    <TextView
        android:id="@+id/nameM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleImageM"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/circleImageM"
        android:layout_toRightOf="@+id/circleImageM"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/nameM"
        android:layout_alignStart="@+id/nameM"
        android:layout_below="@+id/nameM"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray" />


</RelativeLayout>
