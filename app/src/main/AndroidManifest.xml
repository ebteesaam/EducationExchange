<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ebtesam.educationexchange">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bestlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bestlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addBook.AddTextBook"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".login.LoginPage" />
        <activity android:name=".login.RegisterPage" />
        <activity
            android:name=".profile.ProfilePage"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".profile.EditProfile"
        android:parentActivityName=".profile.ProfilePage">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".profile.ProfilePage" />
    </activity>
        <activity
            android:name=".search.SearchBook"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".Utils.SignOutActivity" />
        <activity
            android:name=".announcement.AnnouncementActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".addBook.TakePhotoActivity"
            android:parentActivityName=".addBook.AddTextBook">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".addBook.AddTextBook" />
        </activity>
        <activity
            android:name=".profile.TakeProfilePhotoActivity"
            android:parentActivityName=".profile.EditProfile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".profile.EditProfile" />
        </activity>
        <activity android:name=".profile.MyBooksActivity"></activity>
        <activity android:name=".Fragment.CustomListActivity"></activity>
        <activity android:name=".addBook.ViewBook"></activity>
        <activity android:name=".Material"></activity>
    </application>

</manifest>